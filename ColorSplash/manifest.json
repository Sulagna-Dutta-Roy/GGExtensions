{
    "manifest_version": 3,
    "name": "ColorSplash",
    "version": "1.2",
    "description": "An interactive Chrome extension to change and save the background colors of the current page with advanced features.",
    "permissions": [
      "activeTab",
      "scripting",
      "storage"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    }
  }