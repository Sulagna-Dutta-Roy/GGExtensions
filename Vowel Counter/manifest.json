{
    "doctype": "html",
    "html": {
        "lang": "en",
        "head": {
            "meta": [
                { "charset": "UTF-8" },
                { "name": "viewport", "content": "width=device-width, initial-scale=1.0" }
            ],
            "link": [
                { "rel": "stylesheet", "href": "popup.css" }
            ],
            "title": "Vowel Consonant Counter"
        },
        "body": {
            "children": [
                {
                    "tag": "div",
                    "attributes": {
                        "class": "container"
                    },
                    "children": [
                        {
                            "tag": "h1",
                            "text": "Vowel and Consonant Counter"
                        },
                        {
                            "tag": "textarea",
                            "attributes": {
                                "id": "inputText",
                                "rows": "4",
                                "placeholder": "Enter your text here..."
                            }
                        },
                        {
                            "tag": "br"
                        },
                        {
                            "tag": "div",
                            "attributes": {
                                "class": "btn"
                            },
                            "children": [
                                {
                                    "tag": "button",
                                    "attributes": {
                                        "id": "countButton"
                                    },
                                    "text": "Count"
                                },
                                {
                                    "tag": "button",
                                    "attributes": {
                                        "id": "reset-btn"
                                    },
                                    "text": "Reset"
                                }
                            ]
                        },
                        {
                            "tag": "div",
                            "attributes": {
                                "id": "result"
                            }
                        }
                    ]
                },
                {
                    "tag": "script",
                    "attributes": {
                        "src": "popup.js"
                    }
                }
            ]
        }
    }
}
