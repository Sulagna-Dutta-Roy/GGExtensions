{
  "manifest_version": 3,
  "name": "eyeCare - Break Reminder & Exercises",
  "version": "1.0",
  "description": "Notifies you to take breaks and provides eye and back exercises based on the 20-20-20 rule.",
  "permissions": [
    "alarms",
    "activeTab",
    "storage",
    "notifications"
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "options_page": "options.html",
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+E"
      }
    }
  },
  "system_tray": {
    "menu_item": "options.html"
  }
}
