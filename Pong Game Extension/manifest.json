{
    "manifest_version": 3,
    "name": "Pong Game Extension",
    "version": "1.0",
    "description": "Take a break and enjoy a quick game of Pong! üèì",
    "permissions": [
        "storage"
    ],
    "optional-permissions" : ["tabs"],
    "action": {
        "default_popup": "index.html"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "index.html"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}